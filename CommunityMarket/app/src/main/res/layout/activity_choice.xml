    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.5"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="Orientation"></LinearLayout>


    <com.google.android.gms.common.SignInButton
        android:id="@+id/gotoLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/choice_button_width"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/choice_button_width"
        android:background="@drawable/button_background"
        android:elevation="3dp"
        android:textAllCaps="false"
        android:textSize="@dimen/button_param_text_size"
        android:textColor="@color/blanc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebook_button" />

    <Button
        android:id="@+id/gotoRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/choice_button_width"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/choice_button_width"
        android:background="@drawable/second_button_background"
        android:elevation="3dp"

        android:text="@string/enregister"
        android:textAllCaps="false"
        android:textColor="@color/blanc"
        android:textSize="@dimen/button_param_text_size"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoLogin" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="@dimen/choice_button_width"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="@dimen/choice_button_width"
        android:fontFamily="sans-serif-condensed"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="@string/choice_enregistrer"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/blanc"
        android:textSize="@dimen/button_param_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/caveat"
        android:text="Open Market"
        android:textColor="@color/blanc"
        android:textSize="@dimen/choice_Logo_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>